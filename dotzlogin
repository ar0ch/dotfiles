# -*- mode: sh; coding: utf-8 -*-

start_sync(){
    local link_to=`readlink -n $HOME/.zlogin`
    local dir=`dirname $link_to`
    local cmd="${dir}/.syncsyncgit.sh start"
    eval_verbose $cmd
    eval_verbose "$HOME/toybox/github/syncsyncgit/syncsyncgit.sh start"
}

eval_verbose(){
    echo "$1"
    eval "$1"
}

start_sync

[ -f ~/.zlogin.local ] &&\
  touch ~/.zlogin.local &&\
  source ~/.zlogin.local
