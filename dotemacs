      ;; (define-key ac-complete-mode-map "\C-p" 'ac-previous)

      ;; *補完停止
      (define-key ac-complete-mode-map "\C-[" 'ac-stop)

      ;; *補完する
      ;; (define-key ac-complete-mode-map "\C-i" 'auto-complete)

      ;; *大文字・小文字の区別
      ;; nil:	 区別しない
